		mkdir "$SRC_NAME"_build
		cd "$SRC_NAME"_build
		meson --prefix="$ROOT_PATH/$OUT_PATH" --libdir="lib" -Ddefault_library=static --buildtype=release -Denable_docs=false -Denable_tests=false --strip --cross-file="$ROOT_PATH/$SRC_PATH/cross.meson" "../lib$SRC_NAME"
		[ $? -eq 0 ] || build_die "$THIS: configure stage failed -> $SRC_NAME"
		build_meson $CXC_JOBS
		CXC_FFMPEG_EXTRA_LIBS="$CXC_FFMPEG_EXTRA_LIBS -lstdc++"
	fi
fi

#ffmpeg
set_source "ffmpeg" "git" "https://git.ffmpeg.org/ffmpeg.git" "gpl" "version3" "nonfree"
if [ "${!SRC_ENABLE}" -ne 0 ]
then
	fetch_source
	if [ "$BUILD" -ne 0 ]
	then
		cd_source
		CPPFLAGS="$CXC_CPPFLAGS" ./configure \
		  --cross-prefix="$CXC_HOST"- \
		  --arch="x86_64" \
		  --target-os="mingw64" \
		  --disable-debug \
		  --disable-w32threads \
		  --disable-shared \
		  --enable-static \
		  --prefix="$ROOT_PATH/$OUT_PATH" \
		  --pkg-config="pkg-config" \
		  --pkg-config-flags="--static" \
		  --extra-cflags="$CXC_OPTIM $CXC_CFLAGS" \
		  --extra-ldflags="-static-libgcc -static-libstdc++ -static -s" \
		  --extra-ldflags="-L$ROOT_PATH/$OUT_PATH/lib" \
		  --extra-libs="$CXC_FFMPEG_EXTRA_LIBS" \
		  --bindir="$BIN_PATH"\
		  $CXC_FFMPEG_LIB_OPTIONS
		[ $? -eq 0 ] || build_die "$THIS: configure stage failed -> $SRC_NAME"
		build_make $CXC_JOBS
	fi
fi
